<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_fight">

    <TextView
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:id="@+id/textLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_below="@id/textLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/optionPlusLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            app:elevation="@dimen/elevation_fab"
            android:id="@+id/plusLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:theme="@style/TextPrimaryFab"
            app:layout_anchor="@id/plusLevel"
            app:layout_anchorGravity="center" />
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/optionMinusLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionPlusLevel"
        android:layout_marginTop="26dp">

        <android.support.design.widget.FloatingActionButton
            app:elevation="@dimen/elevation_fab"

            android:id="@+id/minusLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1"
            android:theme="@style/TextPrimaryFab"
            app:layout_anchor="@id/minusLevel"
            app:layout_anchorGravity="center" />
    </android.support.design.widget.CoordinatorLayout>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/optionDPlusLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/optionPlusLevel">

        <android.support.design.widget.FloatingActionButton
            app:elevation="@dimen/elevation_fab"

            android:id="@+id/dPlusLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ +"
            android:theme="@style/TextPrimaryFab"
            app:layout_anchor="@id/dPlusLevel"
            app:layout_anchorGravity="center" />
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/optionDMinusLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionDPlusLevel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@id/optionPlusLevel">

        <android.support.design.widget.FloatingActionButton
            app:elevation="@dimen/elevation_fab"
            android:id="@+id/dMinusLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- -"
            android:theme="@style/TextPrimaryFab"
            app:layout_anchor="@id/dMinusLevel"
            app:layout_anchorGravity="center" />
    </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>
</merge>